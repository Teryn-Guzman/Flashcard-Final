<%- include('partials/header', { title: `Editing: ${set.title}`, currentPath: `/edit/${set.id}` }) %>

  <div class="form-container">
    <h1 class="form-title">Edit Deck</h1>

    <form action="/edit/<%= set.id %>" method="POST">
      <div class="form-group">
        <label for="title">Deck Title</label>
        <input type="text" id="title" name="title" class="form-control" value="<%= set.title %>" required>
        <% if (typeof errorMessages !== 'undefined') { %>
          <% errorMessages.forEach(function(error) { %>
            <% if (error.toLowerCase().includes('title')) { %>
              <div class="error-message"><%= error %></div>
            <% } %>
          <% }); %>
        <% } %>
      </div>
      <div class="form-group">
        <label for="description">Description (Optional)</label>
        <textarea id="description" name="description" class="form-control"><%= set.description || '' %></textarea>
        <% if (typeof errorMessages !== 'undefined') { %>
          <% errorMessages.forEach(function(error) { %>
            <% if (error.toLowerCase().includes('description')) { %>
              <div class="error-message"><%= error %></div>
            <% } %>
          <% }); %>
        <% } %>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">
          <i class="fas fa-save"></i> Save Changes
        </button>
      </div>
    </form>

    <!-- Existing delete button and cards list below -->
    <div class="deck-edit-actions">
      <a href="/decks" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Decks
      </a>
      <form action="/delete/<%= set.id %>" method="POST" class="delete-form">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this deck?')">
          <i class="fas fa-trash"></i> Delete Deck
        </button>
      </form>
    </div>

    <!-- Rest of the file remains unchanged -->


  </div>

<%- include('partials/footer') %>